#!/bin/sh

echo "ğŸ” Running QA checks before push..."

# Run formatting check
echo "ğŸ“ Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting check failed! Run 'npm run format' to fix."
  exit 1
fi

# Run linting
echo "ğŸ” Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed! Run 'npm run lint:fix' to fix auto-fixable issues."
  exit 1
fi

# Run type checking
echo "ğŸ”· Checking TypeScript types..."
NODE_OPTIONS="--max-old-space-size=4096" npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed! Fix type errors before pushing."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
NODE_OPTIONS="--max-old-space-size=4096" npm run test:run
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed! Fix failing tests before pushing."
  exit 1
fi

# Run security audit
echo "ğŸ”’ Running security audit..."
npm run security:ci
if [ $? -ne 0 ]; then
  echo "âŒ Security vulnerabilities found! Run 'npm audit fix' to fix or review manually."
  exit 1
fi

echo "âœ… All QA and security checks passed! Proceeding with push..."
